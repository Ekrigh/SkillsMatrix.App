            <MudButton Color="@Color.Primary" OnClick="@(() => ApplyFilterAsync(context))">Filter</MudButton>
        </MudStack>
    </div>
</MudPopover>

@code {
    [Parameter]
    public IEnumerable<Skill> Skills { get; set; }
    public IEnumerable<Skill> filteredSkills { get; set; }
    bool _filterOpen = true;
