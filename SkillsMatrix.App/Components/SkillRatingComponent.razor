@if (UserSkillRating == null)
{
    <p>Loading...</p>
}
else
{
    <MudPaper Class="p-3" MinWidth="340px" Style="border-radius: 8px" Outlined="true">
        <h5>@UserSkillRating.Skill.Name</h5>
        <div class="d-flex mt-5">
            <MudText Style="min-width: 95px">Skill level</MudText>
            <MudSpacer/>
            <MudRating Class="numbered-ratings" @bind-SelectedValue="UserSkillRating.Rating" Size="Size.Large" FullIcon="@Icons.Material.Rounded.Square" EmptyIcon="@Icons.Material.Rounded.Square" FullIconColor="Color.Secondary" EmptyIconColor="Color.Tertiary" MaxValue="6" />
        </div>
        <div class="d-flex mt-1">
            <MudText Style="min-width: 95px">Interest level</MudText>
            <MudSpacer/>
            <MudRating Class="numbered-ratings" @bind-SelectedValue="UserSkillRating.DesiredRating" Size="Size.Large" FullIcon="@Icons.Material.Rounded.Square" EmptyIcon="@Icons.Material.Rounded.Square" FullIconColor="Color.Secondary" EmptyIconColor="Color.Tertiary" MaxValue="6" />
        </div>
    </MudPaper>
}

@code {
    [Parameter]
    public UserSkillRating UserSkillRating { get; set; }
}