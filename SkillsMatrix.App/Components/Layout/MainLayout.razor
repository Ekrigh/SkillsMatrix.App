 @inherits LayoutComponentBase
<MudThemeProvider Theme="@MyCustomTheme" />
<MudDialogProvider MaxWidth="MaxWidth.Small" FullWidth="true" CloseOnEscapeKey="true" />
<MudSnackbarProvider />
<MudPopoverProvider />
<PageTitle>SkillsMatrix</PageTitle>
<MudLayout>
    <MudAppBar Fixed="true" Style="box-shadow: 0px 3px 6px 0px #00000029;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudLink Href="#" Class="d-flex align-items-center text-decoration-none">
            <MudImage src="..\..\Content\BL-Logo.svg" alt="Bjorn Lunden logo" Fluid="true" Class="pa-5" />
            <MudText Typo="Typo.h6" Class="ml-2">Bjornlunden Skills Management</MudText>
        </MudLink>
        <MudSpacer />
        <MudAvatar Style="background-color:#009FE34D" Class="mr-5">
            <MudIcon Style="Color:white" Icon="@Icons.Material.Outlined.PersonOutline"></MudIcon>
        </MudAvatar>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Docked">
        <MyNavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme MyCustomTheme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = new MudBlazor.Utilities.MudColor("#1D1D1B"),
                Secondary = new MudBlazor.Utilities.MudColor("#154292"),
                Tertiary = new MudBlazor.Utilities.MudColor("#c4c4c4"),
                Info = new MudBlazor.Utilities.MudColor("#009FE3"),
                AppbarBackground = new MudBlazor.Utilities.MudColor("#FFFFFF"),
            }
        };
}